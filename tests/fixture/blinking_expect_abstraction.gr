node counter(res: bool, tick: bool) {
    out o: int = if res then 0 else (0 fby o) + inc;
    inc: int = if tick then 1 else 0;
}

node blinking(tick_number: int) {
    out status: int = if on_off then counter + 1 else 0;
    counter: int = counter(res, true).o;
    res: bool = true fby (counter + 1 == tick_number);
    on_off: bool = (res, true fby on_off).map(true);
}
